<p class="alert alert-success" role="alert"id="notice"><%= notice %></p>


<h1>Friends</h1>

<table class="table">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>User id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.phone_number %></td>
        <td><%= friend.user_id %></td>
       
        <% if friend.user.id == current_user.id %>
        <td><%= link_to "Show", friend %></td>
        <td><%= link_to "Edit", edit_friend_path(friend) %></td>
        <td><%= link_to "Destroy", friend, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% else %>
        <td></td>
        <td></td>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Friend", new_friend_path, class: "btn btn-secondary" %>
